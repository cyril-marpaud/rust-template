[package]
name = "{{project-name}}"
version = "0.1.0-dev"
authors = ["{{authors}}"]
edition = "2021"
license = "{{license-spdx}}"
description = "{{description}}"

[dependencies]
{% if project-type == "CLI" %}
clap = { version = "4", features = ["derive", "wrap_help"] }
color-eyre = "0.6"
colored = "2"
eyre = "0.6"
{% elsif project-type == "Embedded (Bare-metal)" %}
cortex-m-rt = "0.7"
{% elsif project-type == "Embedded (RTIC)" %}
cortex-m-rtic = "1"
{% endif %}
{% if project-kind == "embedded" %}
defmt = "0.3"
defmt-rtt = "0.3"
panic-probe = { version = "0.3", features = ["print-defmt"] }
{{hal-package}}

[dependencies.cortex-m]
version = "0.7.5"
features = ["critical-section-single-core", "inline-asm"]
{% endif %}

{% if project-kind == "embedded" %}
# For `cargo fix` to work.
[[bin]]
name = "{{project-name}}"
test = false
bench = false

[profile.release]
panic = "abort"
opt-level = "s"
codegen-units = 1
lto = true
debug = true
{% endif %}
