include = ["*.toml", ".config/*.toml",{% if project-kind == "embedded" %} "firmware/**/*.toml",{% endif %} "xtask/**/*.toml"]
exclude = [{% if project-kind == "embedded" %}"firmware/**/*.toml", {% endif %}".cargo/config.toml"]

[formatting]
indent_string = "    "
reorder_arrays = true

[[rule]]
include = ["**/Cargo.toml"]
keys = ["*dependencies", "features", "lints.*", "target.*.*dependencies"]

[rule.formatting]
reorder_keys = true

[[rule]]
include = ["**/Cargo.toml"]
keys = ["*dependencies.*", "target.*.*dependencies.*"]

[rule.formatting]
reorder_keys = false
